@model helpone_helpdesk_sys.Models.Equipe

@{
	ViewBag.Title = "Gerenciar Equipes";
}

<div class="row py-5 mb-4">
	<div class="col-12 text-center text-sm-left">
		<h2 class="mb-4 border-bottom pb-3">Gerenciar Equipes</h2>
		<h4 class="mb-4 mt-5">Equipe: #@Html.DisplayFor(model => model.Id) - @Html.DisplayFor(model => model.OMSituada)</h4>
		<div class="row">
			<div class="col border p-3">
				<ul class="list-group list-group-flush">
					@foreach (var item in Model.ListaMembros)
					{
						<li id="@Html.DisplayFor(modelItem => item.Id)" class="list-group-item list-group-item-action">@Html.DisplayFor(modelItem => item.Login)</li>
					}
				</ul>
			</div>
			<div class="col-2 text-center d-flex flex-column d-flex justify-content-center">
				<button type="button" class="btn btn-danger my-2 mx-4 disabled"><i class="fas fa-angle-double-right fa-lg"></i></button>
				<button type="button" class="btn btn-success my-2 mx-4 disabled"><i class="fas fa-angle-double-left fa-lg"></i></button>
			</div>
			<div class="col border p-3">
				<div class="search-form text-center mb-2">
					<form action="/Equipe/Detalhes/@Html.DisplayFor(model => model.Id)" method="post" class="form-inline my-2 my-lg-0 position-relative">
						<i class="fas fa-search position-absolute" style="left: 10px;"></i><input id="SearchString" class="search-input form-control mr-sm-2 py-1 w-100" type="search" name="search" placeholder="Search" aria-label="Search">
					</form>
				</div>
				@if(ViewBag.Usuarios != null)
				{
					<ul class="list-group list-group-flush">
						@foreach (var item in ViewBag.Usuarios)
						{
							<li id="@item.Id" class="list-group-item list-group-item-action">@item.Login</li>
						}
					</ul>
				}
			</div>
		</div>
		@Html.ActionLink("Voltar", "Index", null, htmlAttributes: new { @class = "btn btn-info btn-sm" })
	</div><!-- /. content-header -->
</div>