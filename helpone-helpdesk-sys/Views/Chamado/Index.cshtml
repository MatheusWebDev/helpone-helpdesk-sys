@model IEnumerable<helpone_helpdesk_sys.Models.Chamados.Chamado>
@using helpone_helpdesk_sys.Models.Enums;

@{
	ViewBag.Title = "Consultar chamados";

	string filtroativo = "";
	if (Request.QueryString["filter"] != null)
	{
		filtroativo = String.IsNullOrEmpty(Request.QueryString["filter"].ToString()) ? "" : Request.QueryString["filter"].ToString();
	}

	string todos = "todos";
	string aguardando = "aguardando";
	string respondidos = "respondidos";
	string finalizadosFeedbackPos = "finalizados-feedback-pos";
	string finalizados = "finalizados";
	string cancelados = "cancelados";

	switch (filtroativo)
	{
		case "todos":
			todos = "";
			break;
		case "aguardando":
			aguardando = "";
			break;
		case "respondidos":
			respondidos = "";
			break;
		case "finalizados-feedback-pos":
			finalizadosFeedbackPos = "";
			break;
		case "finalizados":
			finalizados = "";
			break;
		case "cancelados":
			cancelados = "";
			break;
		default:
			break;
	}
}

<section class="content">
	<div class="row py-5">
		<div class="col-12 text-center text-sm-left">
			<h2 class="mb-4 border-bottom pb-3">Consultar chamados</h2>
			<div class="d-flex justify-content-between align-items-center">
				<h4>Meus chamados</h4>
				@Html.ActionLink("Abrir chamado", "Abrir", new { area = "" }, new { @class = "btn btn-info btn-sm" })
			</div>
			<div class="filtro border-top border-right border-left p-2 mt-2">
				<button class="btn btn-link text-secondary float-left" type="button" data-toggle="collapse" data-target="#filterBtns" aria-expanded="false" aria-controls="filterBtns">
					<i class="fas fa-filter"></i>
				</button>
				<div class="collapse float-left pt-1 @ViewBag.ClassesChangedFilter.Item1" id="filterBtns">
					@Html.ActionLink("Todos", "Index", new { sortOrder = ViewBag.QuerySort, filter = todos }, new { @class = "btn btn-info btn-sm " + ViewBag.ClassesChangedFilter.Item2[5] })
					@Html.ActionLink("Aguardando Resposta", "Index", new { sortOrder = ViewBag.QuerySort, filter = aguardando }, new { @class = "btn btn-info btn-sm " + ViewBag.ClassesChangedFilter.Item2[0] })
					@Html.ActionLink("Respondidos", "Index", new { sortOrder = ViewBag.QuerySort, filter = respondidos }, new { @class = "btn btn-info btn-sm " + ViewBag.ClassesChangedFilter.Item2[2] })
					@Html.ActionLink("Finalizados", "Index", new { sortOrder = ViewBag.QuerySort, filter = finalizados }, new { @class = "btn btn-info btn-sm " + ViewBag.ClassesChangedFilter.Item2[3] })
					@Html.ActionLink("Feedback Positivo", "Index", new { sortOrder = ViewBag.QuerySort, filter = finalizadosFeedbackPos }, new { @class = "btn btn-info btn-sm " + ViewBag.ClassesChangedFilter.Item2[4] })
					@Html.ActionLink("Cancelados", "Index", new { sortOrder = ViewBag.QuerySort, filter = cancelados }, new { @class = "btn btn-info btn-sm " + ViewBag.ClassesChangedFilter.Item2[1] })
				</div>
			</div>
				<table class="table table-hover border-right border-left border-bottom">
					<thead class="thead-light">
						<tr>
							<th scope="col">
								@Html.ActionLink("ID", "Index", new { sortOrder = ViewBag.IdSortParm, filter = ViewBag.QueryFilter })
							</th>
							<th scope="col">
								@Html.ActionLink("Titulo do chamado", "Index", new { sortOrder = ViewBag.TituloSortParm, filter = ViewBag.QueryFilter })
							</th>
							<th scope="col">
								@Html.ActionLink("Data abertura", "Index", new { sortOrder = ViewBag.DateSortParm, filter = ViewBag.QueryFilter })
								@*Depois voltar o tipo de data para DATE em vez de string*@
							</th>
							<th scope="col">Status</th>
							<th scope="col">Equipe de Atend.</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
						<tr>
							<th scope="row">@Html.DisplayFor(modelItem => item.Id)</th>
							<td><a href="@Url.Action(ViewBag.TipoAcaoUsuario, "Chamado", new { id = item.Id })">@Html.DisplayFor(modelItem => item.Titulo)</a></td>
							<td>@Html.DisplayFor(modelItem => item.DataCriacao)</td>
							@{
								string status = item.Status.GetDescription().ToString();
							}
							<td>@status</td>
							<td>@Html.DisplayFor(modelItem => item.EquipeAtendimento)</td>
						</tr>
						}
					</tbody>
				</table>
			</div><!-- ./ artigo-header -->
	</div>
</section>
