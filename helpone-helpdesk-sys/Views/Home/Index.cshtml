@{
	ViewBag.Title = "Home Page";

	var listaTopicos = ViewBag.Topicos;
	var listaSubtopicos = ViewBag.Subtopicos;
}

<!-- Content Section -->
<section class="content">
	<div class="container">
		<div class="row py-5">
			<!-- col soluctions -->
			<div class="col-sm-6 col-lg-5 mb-5 text-center text-sm-left">
				<h2 class="h3 mb-2">Soluções Frequentes</h2>
				<div class="row mt-3">
					@foreach (var artigo in ViewBag.Artigos)
					{
						<div class="col-md-6 p-2">
							<a href="@Url.Action("Detalhes", "Artigo", new { id = artigo.Id })" style="white-space: normal;" class="btn btn-light no-white-space text-left p-3 border" role="button">
								@artigo.Titulo
								?
							</a>
						</div>
					}
				</div>
			</div><!-- /.col-soluctions -->
			<!-- col-topics -->
			<div class="col-sm-6 col-lg-4 pl-md-5 text-center text-sm-left">
				<h2 class="h3 mb-3">Selecione um tópico</h2>
				@foreach (var topico in listaTopicos)
				{
					<!-- accordion-topics -->
					<div class="accordion my-1 pt-2" id="accordionExample">
						<!-- card-accordion -->
						<div class="card border-0">
							<div id="topico-@topico.Id">
								<h5 class="mb-2">
									<button class="btn btn-info btn-block d-flex justify-content-between text-left" type="button" data-toggle="collapse" data-target="#collapse-@topico.Id" aria-expanded="true" aria-controls="collapse-@topico.Id">
										<span>@topico.Titulo</span>
										<span class="d-block mb-1"><i class="fas fa-angle-down"></i></span>
									</button>
								</h5>
							</div><!-- / .card-header -->
							<div id="collapse-@topico.Id" class="collapse" aria-labelledby="headingOne" data-parent="#accordionExample">
								<div class="card-body pl-0 pl-sm-1 py-0 pr-0 w-75 mx-auto mx-sm-0">
									<div class="list-group list-group-flush">
										@*@foreach (var subtopico in listaSubtopicos)
											{
												if (subtopico.TopicoID == topico.Id)
												{
												<a href="#" id="subtopico-@subtopico.Id" class="list-group-item list-group-item-action">@subtopico.Title</a>
												}
											}*@
										@if (topico.Id == 1)
										{
											<a href="@Url.Action("Index", "Artigo", new { subtopico = 1 })" id="subtopico-1" class="list-group-item list-group-item-action">Subtopico 1</a>
											<a href="@Url.Action("Index", "Artigo", new { subtopico = 2 })" id="subtopico-2" class="list-group-item list-group-item-action">Subtopico 2</a>
											<a href="@Url.Action("Index", "Artigo", new { subtopico = 3 })" id="subtopico-3" class="list-group-item list-group-item-action">Subtopico 3</a>
										}
										@if (topico.Id == 2)
										{
											<a href="@Url.Action("Index", "Artigo", new { subtopico = 4 })" id="subtopico-4" class="list-group-item list-group-item-action">Subtopico 4</a>
											<a href="@Url.Action("Index", "Artigo", new { subtopico = 5 })" id="subtopico-5" class="list-group-item list-group-item-action">Subtopico 5</a>
											<a href="@Url.Action("Index", "Artigo", new { subtopico = 6 })" id="subtopico-6" class="list-group-item list-group-item-action">Subtopico 6</a>
										}
									</div>
								</div>
							</div><!-- /.card-body -->
						</div><!-- /.card-accordion -->
					</div><!-- /.accordion-topics -->
				}
			</div><!-- /.col-topics -->
			<!-- actions-btns -->
			<div class="col-lg-3 pt-4 pt-sm-0 pt-lg-5">
				<div class="row">
					<div class="col-sm-6 col-lg-12">
						<a role="button" href="@Url.Action("Index", "Chamado")" class="btn btn-lg btn-block btn-info py-4 rounded-0">
							<span class="d-block mb-1"><i class="fas fa-3x fa-chart-bar"></i></span>
							Consultar chamados
							<small class="d-block">Some text here of button</small>
						</a>
					</div>
					<div class="col-sm-6 col-lg-12">
						<a role="button" href="@Url.Action("Abrir", "Chamado")" class="btn btn-lg btn-block btn-info py-4 rounded-0 mt-5 mt-sm-0 mt-lg-5">
							<span class="d-block mb-1"><i class="fas fa-3x fa-chart-bar"></i></span>
							Abrir chamado
							<small class="d-block">Some text here of button</small>
						</a>
					</div>
				</div>
			</div>
			<!-- /.actions-btns -->
		</div>
	</div>
</section>
