<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title | HelpOne - HelpDesk Sys</title>
	@Styles.Render("~/Content/css")
	<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.4.2/css/all.css" integrity="sha384-/rXc/GQVaYpyDdyxK+ecHPVYJSN9bmVFBvjA/9eOB+pb3F2w2N6fc5qB9Ew5yIns" crossorigin="anonymous">
	@Scripts.Render("~/bundles/modernizr")
</head>
<body>

	<header class="header">
		<nav class="navbar navbar-expand-sm navbar-light bg-light shadow-sm">
			<div class="container">
				@Html.ActionLink("Retornar ao SiCaPEx", "Login", "Usuario", new { area = "" }, new { @class = "nav-link d-none d-md-block" })
				<a class="navbar-brand mr-0 my-1" href="@Url.Action("Index","Home")">
					<img src="~/Content/images/logo.png" height="55" alt="HelpOne - Sistema de HelpDesk">
				</a>
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse flex-grow-0" id="navbarSupportedContent">
					<ul class="navbar-nav mr-auto">
						<li class="nav-item align-self-center">
							<button type="button" class="btn btn-link text-secondary" title="acessibilidade para daltônicos" data-toggle="modal" data-target="#exampleModalCenter">
								<i class="fas fa-low-vision fa-2x"></i>
							</button>
						</li>
						<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
								@Html.Partial("_UserLogged")
							</a>
							<div class="dropdown-menu" aria-labelledby="navbarDropdown">
								@Html.ActionLink("Meus chamados", "Index", "Chamado", new { area = "" }, new { @class = "dropdown-item" })
								@Html.ActionLink("Abrir Chamado", "Abrir", "Chamado", new { area = "" }, new { @class = "dropdown-item" })
								@Html.ActionLink("Equipes", "Index", "Equipe", new { area = "" }, new { @class = "dropdown-item" })
								<div class="dropdown-divider"></div>
								@Html.ActionLink("Retornar ao SiCaPEx", "Login", "Usuario", new { area = "" }, new { @class = "dropdown-item" })
							</div>
						</li>
					</ul>
				</div>
			</div>
		</nav>
	</header>

	<main class="container body-content">
		@RenderBody()
	</main>
	<hr />
	<footer class="container">
		<p>Copyright @@ 2018 | DGP - QGEx - Bloco E - 3º Piso - SMU - CEP 70630-901 - Brasília-DF</p>
	</footer>



	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/bootstrap")
	@Scripts.Render("~/bundles")
	@RenderSection("scripts", required: false)
</body>
</html>
