@model helpone_helpdesk_sys.Models.Artigo

@{
	ViewBag.Title = "Editar";
}

<h2 class="mt-4">Editar Artigo</h2>

@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()

	<div class="form-horizontal">
		<h4>#@Html.DisplayFor(model => model.Id) - @Html.DisplayFor(model => model.Titulo)</h4>
		<hr />
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		@Html.HiddenFor(model => model.Id)
		@Html.HiddenFor(model => model.QtdLike)
		@Html.HiddenFor(model => model.QtdUnlike)

		<div class="form-group">
			@Html.LabelFor(model => model.SubtopicoID, "Subtopico", htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.DropDownList("SubtopicoID", null, htmlAttributes: new { @class = "form-control" })
				@Html.ValidationMessageFor(model => model.SubtopicoID, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.Titulo, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.Titulo, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.Titulo, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.ConteudoArtigo, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.TextAreaFor(model => model.ConteudoArtigo, new { @class = "form-control", rows = 5 })
				@Html.ValidationMessageFor(model => model.ConteudoArtigo, "", new { @class = "text-danger" })
			</div>
		</div>


		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="Salvar" class="btn btn-info btn-lg" />
			</div>
		</div>
	</div>
}
<div>
	@Html.ActionLink("Voltar", "Index", new { area = "" }, new { @class = "btn btn-secondary btn-sm mt-3" })
</div>
